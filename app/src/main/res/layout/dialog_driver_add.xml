<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay1"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView33"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="إسم السائق"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="رقم الهاتف"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="كلمة السر"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay4"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay3"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:enabled="false"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:text="-"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView4"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="الرقم التعريفي"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/lay5"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/lay4"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:text="إضافة سائق"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:background="@drawable/shape2" />

    </LinearLayout>

</RelativeLayout>