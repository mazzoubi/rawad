<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay1"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:enabled="false"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView33"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="الإسم الثلاثي"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay12"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:enabled="false"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView12"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="رقم الهاتف"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay2"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay12"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:enabled="false"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="رقم الجواز"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay3"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:enabled="false"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="مكان الإصدار"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay4"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay3"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:enabled="false"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView4"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="تاريخ الإنتهاء"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay8"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay4"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txvDate8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@drawable/shape3"
            android:enabled="false"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView8"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="المرجع"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:id="@+id/lay6"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/lay8"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/txvDate6"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1.5"
            android:entries="@array/state"
            android:layout_gravity="center"
            android:enabled="false"
            android:foregroundGravity="center"
            android:textAlignment="center"
            android:background="@drawable/shape3"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView6"
            android:gravity="right"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:background="@color/colorSecondary"
            android:layout_height="match_parent"
            android:text="تأكيد المكتب"
            android:textColor="#ffffff" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_below="@+id/lay6"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_below="@+id/lay6"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_baseline_camera_alt_24"
        android:layout_height="150dp" />

</RelativeLayout>